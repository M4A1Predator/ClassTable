<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- MainTheme -->
    <style name="MainTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Course List Item -->
    <style name="CourseListItem" parent="android:Theme.Light">
        <item name="android:textSize">@dimen/course_list_item_text_size</item>
        <item name="android:layout_marginLeft">@dimen/course_list_item_margin_left</item>
    </style>

    <!-- Event List Item -->
    <style name="EventListItem" parent="android:Theme.Black">
        <!--<item name="android:background">#10E0FF</item>-->
        <item name="android:textColor">#000</item>
    </style>
    <style name="EventListItemTimeText" parent="android:Theme.Black">
        <item name="android:textSize">@dimen/event_list_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="EventListItemMainText" parent="android:Theme.Black">
        <item name="android:textSize">@dimen/event_list_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="EventListItemNameText" parent="EventListItemMainText">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="EventChillItem" parent="android:Theme.Black">
        <item name="android:background">#ff9c4c</item>
        <item name="android:textColor">@color/textBlackColor</item>
    </style>


</resources>
